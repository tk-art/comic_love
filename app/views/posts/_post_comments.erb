<div class="border-top mb-10">
  <p class="mt-5">コメント一覧</p>
  <div class="comments">
    <% comments.each do |c| %>
      <h5><%= link_to c.user.name, user_path(c.user_id) %></h5>
      <p><%= c.content %></p>
    <% end %>
  </div>
  <%= form_with model: [post, comment] do |f| %>
    <%= f.text_area :content, id: "comment-form", class: "form" %>
    <%= f.hidden_field :post_id, value: post.id %>
    <%= button_tag type: "submit", class: "btn btn-success float-right mt-1" do %>
      <i class="far fa-comments"></i> コメントする
    <% end %>
  <% end %>
</div>