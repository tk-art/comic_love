<% provide(:title, 'Sign In') %>
<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <h2 class="center">新規登録</h2>
      <%= form_with(model: @user, url: user_registration_path, local: true) do |f| %>
        <%= render "devise/shared/error_messages", object: f.object %>

        <div class="form-group">
          <%= f.label '名前' %><br />
          <%= f.text_field :name, class: 'form', id: 'name' %>
        </div>

        <div class="form-group">
          <%= f.label 'メールアドレス' %><br />
          <%= f.email_field :email, autofocus: true, class: 'form', id: 'email' %>
        </div>

        <div class="form-group">
          <%= f.label 'パスワード' %>
          <%= f.password_field :password, class: 'form', id: 'password' %>
        </div>

        <div class="form-group">
          <%= f.label 'パスワード確認' %><br />
          <%= f.password_field :password_confirmation, class: 'form', id: 'password-confirmation' %>
        </div>

        <div class="actions">
          <%= f.submit "登録する", class: " btn btn-info" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
