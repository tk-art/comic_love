<% provide(:title, 'Category') %>
<div class="container">
  <div class="row">
    <div class="col-md-4">
      <ul>
        <li class="table-tr center">
          <% @categories.each do |category| %>
            <h4 class="ca-name"><%= link_to category.name, category_path(category) %></h4>
          <% end %>
        </li>
      </ul>
    </div>
    <div class="col-md-8">
      <h2>カテゴリー（<%= @categories_show.name %>)</h2>
      <% @category.each do |category|%>
        <%= render 'categories', category: category %>
      <% end %>
    </div>
  </div>
</div>